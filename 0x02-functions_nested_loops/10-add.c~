#include "main.h"

/**
 * print_sign - checks and prints the sign of a number
 *
 * @n: integer input number
 *
 * Return: 1 is greater than 0, 0 is 0 and -1 is less than zero
 */

int print_sign(int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (n < 0)
	{
		_putchar('-');
		return (-1);
	}
	else
	{
		_putchar('0');
		return (0);
	}
	_putchar('\n');
}
